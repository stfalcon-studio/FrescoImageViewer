<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.stfalcon.frescoimageviewersample">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".features.main.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".features.demo.simple.SimpleUsageActivity"
            android:label="@string/action_simple_usage"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".features.demo.styled.StyledViewActivity"
            android:label="@string/action_styled_view"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".features.demo.rotation.DialogRotationExampleActivity"
            android:label="@string/action_rotation_support"/>
        <activity
            android:name=".features.demo.formatter.CustomObjectsActivity"
            android:label="@string/action_custom_objects"
            android:screenOrientation="portrait"/>
    </application>

</manifest>